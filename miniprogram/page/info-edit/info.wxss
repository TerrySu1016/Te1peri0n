/* page/info/info.wxss */
.container {
  height: 100vh;
  width: 100%;
  background-color: #ffffff
}

.header {
  font-size: 20px;
  font-weight: bold;
  /* margin-bottom: 10px;
  margin-top: 10px; */
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.edit {
  height: 30px !important;
  width: 30px !important;
  background-color: #ffffff;
  padding: 0;
  transform: translate(120px, 0)
}

.fill {
  height: 100% !important;
  width: 100% !important;
}

.whole {
  height: 100%;
  width: 100%;
}

.face {
  position: absolute;
  left: 20px;
  top: 40px;
  width: 100px !important;
  height: 100px !important;
  border-radius: 50%;
  border: 5px solid #000000;
}

.top-bar {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 115px;
  background-color: #B3D4E0;
}

.name {
  position: absolute;
  left: 20px;
  top: 160px;
  display: flex;
  justify-content: center;
  font-size: 24px;
  font-weight: bold;
}

.desc {
  position: absolute;
  left: 20px;
  top: 190px;
}

.gap {
  width: 100%;
  height: 10px;
  background-color: #F3F4F6;
}

.gap2 {
  width: 100%;
  height: 1px;
  background-color: #F3F4F6;
}

.excon {
  position: absolute;
  top: 235px;
  left: 0;
  height: calc(100% - 235px);
}

.exp {
  width: 100%;
}

.pos {
  font-weight: bold;
}

.comp {
  font-size: 14px;
}

.date {
  font-size: 14px;
  color: #868686;
  margin-bottom: 10px;
}

.yap {
  font-size: 14px;
  margin-bottom: 10px;
}