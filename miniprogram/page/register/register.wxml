<!--page/register/register.wxml-->
<view class="container">
  <image class="icon" src="/image/logo.png"></image>
  <view class="welcome">Welcome to our community!</view>
  <view class="instr">Please create a student account</view>
  <input class="input1" placeholder="Username" bindinput="onInputChange1" value="{{input1}}"></input>
  <input class="input2" placeholder="Password" bindinput="onInputChange2" value="{{input2}}"></input>
  <button class="submit" bindtap="onSubmit">Register</button>
  <view class="make">Want to be a counselor?</view>
  <button class="register" bindtap="toJoin">Join Us</button>
</view>