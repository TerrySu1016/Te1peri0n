<!--page/modify/modify.wxml-->
<view class="container">
  <scroll-view class="excon" scroll-y="true">
    <view wx:if="{{page == 'exp'}}" class="header">
      <text>Experience</text>
      <button class="edit" bindtap="changeExp">
        <image class="fill" src="/image/plus.png"></image>
      </button>
    </view>
    <view wx:if="{{page == 'exp'}}" class="gap2"></view>
    <view wx:if="{{page == 'exp'}}" wx:for="{{exp}}" wx:key="index">
      <view class="exp">
        <view class="pos">{{item[0]}}</view>
        <view class="comp">{{item[1]}}</view>
        <view class="date">{{item[2]}}</view>
        <view class="yap">{{item[3]}}</view>
      </view>
      <view class="gap2"></view>
    </view>
    <view wx:if="{{page == 'edu'}}" class="header">
      <text>Education</text>
      <button class="edit" bindtap="changeEdu">
        <image class="fill" src="/image/plus.png"></image>
      </button>
    </view>
    <view wx:if="{{page == 'edu'}}" class="gap2"></view>
    <view wx:if="{{page == 'edu'}}" wx:for="{{edu}}" wx:key="index">
      <view class="exp">
        <view class="pos">{{item[0]}}</view>
        <view class="comp">{{item[1]}}</view>
        <view class="date">{{item[2]}}</view>
        <view class="yap">{{item[3]}}</view>
      </view>
      <view class="gap2"></view>
    </view>
  </scroll-view>
  <button class="submit">SUBMIT</button>
</view>